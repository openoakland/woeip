{
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ["*.ts", "*.*.ts", "*.tsx", "*.*.tsx"],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
